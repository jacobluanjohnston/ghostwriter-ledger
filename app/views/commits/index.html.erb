<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">Ghostwriter Ledger</h1>
  <table class="min-w-full text-sm">
    <thead class="border-b font-medium">
    <tr><th>SHA</th><th>Author</th><th>Repo</th><th>AI %</th><th>Tags</th><th>Pushed</th></tr>
    </thead>
    <tbody>
    <% @commits.each do |c| %>
      <tr class="border-b">
        <td class="font-mono"><%= c.sha[0,7] %></td>
        <td><%= c.author %></td>
        <td><%= c.repo %></td>
        <td><%= (c.ai_score*100).round(1) %>%</td>
        <td><%= c.tags&.join(", ") %></td>
        <td><%= c.created_at.strftime("%Y‑%m‑%d %H:%M") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
